# =========================================
# BE1st Backend Environment Variables
# =========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------
# REQUIRED - Core Settings
# -----------------------------------------

# Database connection (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# JWT secret for authentication (generate a random 64-char string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server port
PORT=5000

# Environment (development | staging | production)
NODE_ENV=development

# -----------------------------------------
# REQUIRED - Admin Account
# -----------------------------------------

# Initial admin user (created on first run by setup-db.js)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-secure-password

# -----------------------------------------
# OPTIONAL - Stripe Payments
# -----------------------------------------

# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# -----------------------------------------
# OPTIONAL - AI Features
# -----------------------------------------

# Anthropic Claude API (for AI scanning, chat)
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenAI (alternative AI provider)
OPENAI_API_KEY=sk-your-openai-api-key

# -----------------------------------------
# OPTIONAL - Email Service
# -----------------------------------------

# SMTP settings (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Or use a service like SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# -----------------------------------------
# OPTIONAL - File Storage
# -----------------------------------------

# Cloudinary (for image uploads)
# Get from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 (alternative file storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# -----------------------------------------
# OPTIONAL - External APIs
# -----------------------------------------

# eBay API (for marketplace integration)
EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret

# Google Maps (for location features)
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------
# OPTIONAL - Redis Cache
# -----------------------------------------

# Redis connection (for caching, rate limiting)
REDIS_URL=redis://localhost:6379

# -----------------------------------------
# OPTIONAL - Logging & Monitoring
# -----------------------------------------

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn

# Log level (debug | info | warn | error)
LOG_LEVEL=info

# -----------------------------------------
# OPTIONAL - CORS Settings
# -----------------------------------------

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# -----------------------------------------
# OPTIONAL - Feature Flags
# -----------------------------------------

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
